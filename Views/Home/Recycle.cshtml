<h2>Recycle</h2>

<input type="button" id="pickup" class="pickup" value="Pick me up" />
<div class="display" id="display">
    <p>*please ensure that you have the correct delivery address</p>
</div>

<div class="selectOption" id="selectOption">
    <input type="button" value="domestic" class="domesticbtn" id="domesticOption" />

    <input type="button" value="business" class="businessbtn" id="businessOption" />
</div>

<div class="business" id="business">
    <h3>BUSINESS</h3>
    <p>please fill in the details for your next pick up</p>
    <label for="bins">Number of bins</label>
    <select id="bins">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
        <option value="6">6</option>
        <option value="7">7</option>
        <option value="8">8</option>
        <option value="9">9</option>
        <option value="10">10</option>
    </select>

    <label for="type">Type of material</label>
    <select id="material">
        <option value="plastic">Plastic</option>
        <option value="paper">Paper</option>
        <option value="glass">Glass</option>
        <option value="metal">Metal</option>
    </select>

    <input type="submit" class="submit" id="submitbus" />

    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>Number of bins</th>
                    <th>Recyclable material</th>
                </tr>
            </thead>
            <tbody id="table-body2">
            </tbody>
        </table>
    </div>

</div>

<div class="domestic" id="domestic">

    <h3>DOMESTIC</h3>
    <p>please fill in the details for your next pick up</p>
    <label for="bags">Number of bags</label>
    <select id="nobagsdom">

        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
        <option value="6">6</option>
        <option value="7">7</option>
        <option value="8">8</option>
        <option value="9">9</option>
        <option value="10">10</option>

    </select>
    <label for="type">Type of material</label>
    <select id="material1">
        <option value="plastic">Plastic</option>
        <option value="paper">Paper</option>
        <option value="glass">Glass</option>
        <option value="metal">Metal</option>
    </select>

    <input type="submit" class="submit" id="submitdom" />

    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>number of bags</th>
                    <th>recyclable material</th>
                </tr>
            </thead>
            <tbody id="table-body">
            </tbody>
        </table>
    </div>

</div>


<input type="button" id="dropoff" class="dropoffbtn" value="Drop me off" />

<div class="dropoff" id="dropOff">
    
    <label for="locations">Drop-off Locations</label>
    <select id="location" >
        <option value="Atterbury">Atterbury Value Park</option>
        <option value="Hillcrest">Hillcrest Boulevard Shopping Centre</option>
        <option value="Loftus">Loftus Park</option>
        <option value="Olympus">Olympus Village</option>
        <option value="Willows">Willows Crossing Shopping Centre</option>
    </select>

    <label for="bags">Number of bags</label>
    <select id="nobagsdrop">

        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
        <option value="6">6</option>
        <option value="7">7</option>
        <option value="8">8</option>
        <option value="9">9</option>
        <option value="10">10</option>

    </select>
    <label for="type">Type of material</label>
    <select id="material2">
        <option value="plastic">Plastic</option>
        <option value="paper">Paper</option>
        <option value="glass">Glass</option>
        <option value="metal">Metal</option>
    </select>

    <input type="submit" class="submit" id="submitdrop" />

    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>Number of bags</th>
                    <th>Recyclable material</th>
                </tr>
            </thead>
            <tbody id="table-body1">

            </tbody>
        </table>
    </div>
</div>


<div class="container">
    <h3>Past collections</h3>
    <table class="table">
        <tr>
            <th>Number of bags</th>
            <th>Date</th>
            <th>Address</th>
            <th>Type</th>
            <th>Points Collected</th>
        </tr>
        @foreach(var Rmaterial in Model)
            {
                <tr>
                    <td>@Rmaterial.numberOfBags</td>
                    <td>@Rmaterial.collectionDate</td>
                    <td>@Rmaterial.address</td>
                    <td>@Rmaterial.MaterialInfo()</td>
                    <td>@Rmaterial.getPoints()</td>
                </tr>
            }
       
    </table>
</div>

