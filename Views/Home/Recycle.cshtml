@model List<homework_4.Models.RecyclableMaterials> 

<style>
    .selectOption {
        display: none;
    }

    .business {
        display: none;
    }

    .domestic {
        display: none;
    }

    .dropoff {
        display: none;
    }

    .pickup {
        background-color: mediumseagreen;
        width: 300px;
        height: 100px;
        margin: 7px;
        display:inline-block;
    }

    .dropoffbtn {
        background-color: mediumseagreen;
        width: 300px;
        height: 100px;
        margin: 7px;
        display:inline-block;
    }
    .domesticbtn {
        background-color:darkgreen;
        width:150px;
        height:60px;
       
    }
    .businessbtn {
        background-color: darkgreen;
        width: 150px;
        height: 60px;
    }
    .submit{
        background-color:seagreen;
    }
    .display{
        display:none;
        color:lightslategray;
